#include <stdio.h>
#include <math.h>
#include <conio.h>
#include <iostream>
#include <omp.h>
#include <cmath>
#include <ctime>
 double x, dx1, a, c, s=0, rpr=0, rsh=0, b;
 const double pi = M_PI;//3.141592653589793238463;
 double k=31*(pi)/2;
 using namespace std;
int main()
{
a=0;
b=1.0/3;
c=pow(k,b); // отрезок
dx1=0.0001; //разбиение для отрезка

 #pragma omp parallel num_threads(2) //выберете количество ядер
 #pragma omp parallel shared(rsh) private(rpr)
 //#pragma omp parallel reduction (+: rsh)
  {
    #pragma omp for
    for (x=0; x<=c; x=x+dx1)
    {
     double y = 3*x*x*sin(x*x*x);
     rpr += y*dx1;
    }
     #pragma omp critical
     rsh += rpr;

  }
 cout << "answer_s=" << rsh << "\n"; // конечный ответ
cout << "runtime = " << clock()*10000.0 << endl;
return 0;
}
